{{ 'section-lookbooks.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-padding-{{ section.id }} {
    padding-top: {{ section.settings.top_padding_mobile }}px;
    padding-bottom: {{ section.settings.bottom_padding_mobile }}px;
  }

  @media screen and (min-width: 750px) {
    .section-padding-{{ section.id }} {
      padding-top: {{ section.settings.top_padding_tablet }}px;
      padding-bottom: {{ section.settings.bottom_padding_tablet }}px;
    }
  }

  @media screen and (min-width: 990px) {
    .section-padding-{{ section.id }} {
      padding-top: {{ section.settings.top_padding_desktop }}px;
      padding-bottom: {{ section.settings.bottom_padding_desktop }}px;
    }
  }
{%- endstyle -%}

<div class="lookbooks color-{{ section.settings.color_scheme }}">
  <div class="page-width section-padding-{{ section.id }}">
    {% if section.settings.heading != blank %}
      <h2 class="lookbooks-heading">{{ section.settings.heading }}</h2>
    {%- endif -%}
    <div class="lookbook-grid">
      {%- for block in section.blocks -%}
        <div class="lookbook-item">
          <div class="lookbook-item__media">
            <div class="media media--square">
              {%- liquid
                assign lookbook_product = block.settings.product
                assign lookbook_image = lookbook_product.featured_media.preview_image
                 
                if block.settings.image
                  assign lookbook_image = block.settings.image
                endif
    
                assign sizes = '100vw'
                assign widths = '400, 600, 800, 1200, 1600'
                assign fetch_priority = 'auto'
                if section.index == 1
                  assign fetch_priority = 'high'
                endif
              -%}
              
              {% if lookbook_image != blank %}
                {{
                  lookbook_image
                  | image_url: width: 800
                  | image_tag: loading: 'lazy', sizes: sizes, widths: widths, fetchpriority: fetch_priority
                }}
              {%- else -%}
                {%- capture index %}{%- cycle '1', '2', '3', '4', '5', '6' -%}{%- endcapture -%}
                {{ 'product-' | append: index | placeholder_svg_tag: 'placeholder' }}
              {%- endif -%}
            </div>
            <div class="lookbook-item__view-buton" style="--spacing-top: {{ block.settings.position_top }}%;--spacing-left: {{ block.settings.position_left }}%">
              <svg xmlns="http://www.w3.org/2000/svg" width="11" height="11" viewBox="0 0 11 11" fill="none" class="icon">
                <path d="M5.3457 1.04175V9.50329" stroke="currentColor" stroke-width="1.5" stroke-linecap="square" stroke-linejoin="round"/>
                <path d="M1.11523 5.27246H9.57677" stroke="currentColor" stroke-width="1.5" stroke-linecap="square" stroke-linejoin="round"/>
              </svg>
            </div>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

